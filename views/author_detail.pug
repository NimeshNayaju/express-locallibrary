extends layout

block content

  h1 Author: #{author.name}
  p #{author.lifespan}

  div(style='margin-left: 20px; margin_top: 20px')

    h4 Books

    dl
      each book in author_book_list
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p There are no books from this author!
